<h2>The form for a new user goes here</h2>

<%= form_for :user, url: users_path do |f| %>
<label>Name:</label><br /><%= f.text_field :name %><br />
<label>Email:</label><br /><%= f.text_field :email %><br />
<label>Password:</label><br /><%= f.password_field :password %><br />
<label>Password_confirmation:</label><br /><%= f.password_field :password_confirmation %><br />
<%= f.submit "Sign Up!" %>
<% end %>